<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- Slight background tint for selection -->
        <solid android:color="#F0F8FF" /> <!-- AliceBlue: light blue tint -->

        <!-- Distinct border for selected state -->
        <stroke
            android:width="2dp"
            android:color="#2196F3" /> <!-- Blue (Material Design Primary) -->

        <!-- Rounded corners -->
        <corners android:radius="4dp" />
    </shape>

</selector>